#!/usr/bin/env node

const logger = require('../lib/logger')
const request = require('request')
const chalk = require('chalk')

/**
 * Padding.
 */

console.log()
process.on('exit', () => {
  console.log()
})

/**
 * List repos.
 */

request({
  url: 'https://api.github.com/repos/liberje/react-sexy-template/branches',
  headers: {
    'User-Agent': 'vue-cli'
  }
}, (err, res, body) => {
  if (err) logger.fatal(err)
  const requestBody = JSON.parse(body)
  if (Array.isArray(requestBody)) {
    console.log('  Available official templates:')
    console.log()
    requestBody
      .filter(repo => repo.name != 'master')
      .map(repo => {
        console.log(
          '  ' + chalk.yellow('â˜…') +
          '  ' + chalk.blue(repo.name)
        )
      })
  } else {
    console.error(requestBody.message)
  }
})
